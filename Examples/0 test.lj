#pragma appname "LJ2 Fibonacci Test "
#pragma console on
#pragma "optimizecode" "on"
#pragma "ListASM" "on"
#pragma version


func fibonacci(n) {
    if (n <= 1) {
        return n;
    }
    return fibonacci(n - 1) + fibonacci(n - 2);
}

fib7 = fibonacci(7);
print("fibonacci(7) = ", fib7, " (should be 13)\n");

print("\n=== Test 9: Multiple Returns ===\n");
func maxOfThree(a, b, c) {
    if (a >= b && a >= c) {
        return a;
    }
    if (b >= c) {
        return b;
    }
    return c;
}

maxVar = maxOfThree(15, 27, 12);
print("maxOfThree(15, 27, 12) = ", maxVar, " (should be 27)\n");

