// Test structures and direct data assignment
// V1.021.0 - New features
// Syntax: p1.StructType = {values}; for declaration
// Syntax: p1\field for field access

#pragma appname "LJ2 Structure Test"
#pragma decimals 3
#pragma console on
#pragma consolesize "680x740"
#pragma consoleposition "30,50"
#pragma optimizecode on
#pragma ListASM on
#pragma FastPrint on
#pragma RunThreaded on
#pragma ftoi "truncate"
#pragma version on
#pragma modulename on
#pragma PasteToClipboard on
#pragma floattolerance 0.0001
#pragma stackspace 2048
#pragma stackdepth 1024

// =============================================
// Test 1: Structure Definition
// =============================================
print("=== Test 1: Structure Definition ===");

struct Point {
    x.i;
    y.i;
}

struct Data {
    value.i;
    factor.f;
    label.s;
}

// =============================================
// Test 2: Structure Declaration with Init
// =============================================
print("");
print("=== Test 2: Struct Declaration ===");

p1.Point = {10, 20};
print("p1\\x =", p1\x);
print("p1\\y =", p1\y);
print("Sum =", p1\x + p1\y);

// =============================================
// Test 3: Mixed Type Struct
// =============================================
print("");
print("=== Test 3: Mixed Type Struct ===");

d.Data = {42, 3.14, "test"};
print("d\\value =", d\value);
print("d\\factor =", d\factor);
print("d\\label =", d\label);

// =============================================
// Test 4: Field Assignment
// =============================================
print("");
print("=== Test 4: Field Assignment ===");

p1\x = 100;
p1\y = 200;
print("After assignment:");
print("p1\\x =", p1\x);
print("p1\\y =", p1\y);

// =============================================
// Test 5: Multiple Structs
// =============================================
print("");
print("=== Test 5: Multiple Structs ===");

origin.Point = {0, 0};
corner.Point = {640, 480};

print("origin:", origin\x, origin\y);
print("corner:", corner\x, corner\y);

// =============================================
// Test 6: Struct Field in Expressions
// =============================================
print("");
print("=== Test 6: Field Expressions ===");

a.Point = {5, 10};
b.Point = {15, 20};

sum.i = a\x + b\x;
print("a\\x + b\\x =", sum);

diff.i = b\y - a\y;
print("b\\y - a\\y =", diff);

// =============================================
// Test 7: Array Initialization
// =============================================
print("");
print("=== Test 7: Array Init ===");

array nums.i[5] = {10, 20, 30, 40, 50};
i = 0;
while i < 5 {
    print("nums[", i, "] =", nums[i]);
    i++;
}

// =============================================
// Test 8: String Array Init
// =============================================
print("");
print("=== Test 8: String Array Init ===");

array names.s[3] = {"Alice", "Bob", "Charlie"};
print(names[0]);
print(names[1]);
print(names[2]);

print("");
print("All tests completed!");
