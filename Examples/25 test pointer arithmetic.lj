/* Array Pointer Arithmetic Test (V1.20.24+)
   Tests pointer arithmetic with array elements using explicit type syntax
   Demonstrates &arr[index] syntax with ptr\i, ptr\f, ptr\s
*/

#pragma appname "Array-Pointer-Arithmetic-Test"
#pragma console on
#pragma optimizecode on
#pragma ListASM on
#pragma version on
#pragma RunThreaded on
#pragma consolesize "640x480"
#pragma stackspace 512
#pragma stackdepth 1024
#pragma PasteToClipboard on
#pragma modulename on
#pragma floattolerance 0.00001

print("=== Array Pointer Arithmetic Tests ===");

// Test 1: Basic array element pointer
print("Test 1: Basic Array Element Pointer");
print("");

array arr.i[5];
arr[0] = 10;
arr[1] = 20;
arr[2] = 30;
arr[3] = 40;
arr[4] = 50;

ptr = &arr[0];          // Get pointer to first element
print("arr[0] = ", arr[0]);
print("ptr\\i = ", ptr\i);
assertEqual(10, ptr\i);

ptr\i = 100;            // Modify through pointer
print("After ptr\\i = 100:");
print("arr[0] = ", arr[0]);
assertEqual(100, arr[0]);

// Test 2: Pointer to middle element
print("");
print("Test 2: Pointer to Middle Element");
print("");

ptr = &arr[2];          // Point to arr[2]
print("ptr\\i (arr[2]) = ", ptr\i);
assertEqual(30, ptr\i);

ptr\i = 333;
print("After ptr\\i = 333:");
print("arr[2] = ", arr[2]);
assertEqual(333, arr[2]);

// Test 3: Pointer arithmetic - forward traversal
print("");
print("Test 3: Pointer Arithmetic (Forward)");
print("");

ptr = &arr[0];
i = 0;

print("Forward traversal using pointer arithmetic:");
while i < 5 {
    print("ptr\\i = ", ptr\i);
    ptr = ptr + 1;      // Move to next element
    i = i + 1;
}

// Test 4: Pointer arithmetic - backward traversal
print("");
print("Test 4: Pointer Arithmetic (Backward)");
print("");

ptr = &arr[4];          // Start at last element
i = 4;

print("Backward traversal using pointer arithmetic:");
while i >= 0 {
    print("ptr\\i = ", ptr\i);
    ptr--;              // Move to previous element
    i--;
}

// Test 5: Modify array via pointer arithmetic
print("");
print("Test 5: Modify Array via Pointer Arithmetic");
print("");

ptr = &arr[0];
i = 0;

while i < 5 {
    ptr\i = (int)(ptr\i * 2);    // Double each value - explicit cast for int array
    ptr = ptr + 1;
    i = i + 1;
}

print("After doubling all values:");
i = 0;
while i < 5 {
    print("arr[", i, "] = ", arr[i]);
    i = i + 1;
}

// Verify the doubled values
assertEqual(200, arr[0]);   // Was 100, doubled to 200
assertEqual(40, arr[1]);    // Was 20, doubled to 40
assertEqual(666, arr[2]);   // Was 333, doubled to 666
assertEqual(80, arr[3]);    // Was 40, doubled to 80
assertEqual(100, arr[4]);   // Was 50, doubled to 100

// Test 6: Float array pointers
print("");
print("Test 6: Float Array Pointers");
print("");

array farr.f[3];
farr[0] = 1.1;
farr[1] = 2.2;
farr[2] = 3.3;

fptr = &farr[0];
i = 0;

print("Float array via pointer:");
while i < 3 {
    print("fptr\\f = ", fptr\f);
    fptr = fptr + 1;
    i = i + 1;
}

// Verify float values
fptr = &farr[0];
assertFloatEqual(1.1, fptr\f);
fptr = fptr + 1;
assertFloatEqual(2.2, fptr\f);
fptr = fptr + 1;
assertFloatEqual(3.3, fptr\f);

// Test 7: String array pointers
print("");
print("Test 7: String Array Pointers");
print("");

array sarr.s[3];
sarr[0] = "First";
sarr[1] = "Second";
sarr[2] = "Third";

sptr = &sarr[0];
i = 0;

print("String array via pointer:");
while i < 3 {
    print("sptr\\s = ", sptr\s);
    sptr = sptr + 1;
    i = i + 1;
}

// Verify string values
sptr = &sarr[0];
assertStringEqual("First", sptr\s);
sptr = sptr + 1;
assertStringEqual("Second", sptr\s);
sptr = sptr + 1;
assertStringEqual("Third", sptr\s);

// Test 8: Pointer offset calculation
print("");
print("Test 8: Pointer with Offset");
print("");

ptr = &arr[1];          // Point to arr[1] (value 40)
print("ptr\\i (arr[1]) = ", ptr\i);
assertEqual(40, ptr\i);

ptr2 = ptr + 2;         // Point to arr[3] (value 80)
print("ptr+2 -> \\i (arr[3]) = ", ptr2\i);
assertEqual(80, ptr2\i);

print("");
print("=== Array Pointer Arithmetic Tests Complete ===");
print("  - Integer array pointers: PASSED");
print("  - Float array pointers: PASSED");
print("  - String array pointers: PASSED");
print("  - Pointer arithmetic (forward/backward): PASSED");
print("  - Array modification via pointers: PASSED");
print("  - Pointer offset calculations: PASSED");
print("");
